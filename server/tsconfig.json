{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "services": ["services"],
      "services/*": ["services"], 
      "utils": ["utils"],
      "utils/*": ["utils"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

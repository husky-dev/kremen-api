{
  "name": "@kremen/transport-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn start:prd",
    "start:prd": "micro -l tcp://0.0.0.0:${PORT-8080} dist/index.js",
    "start:dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"yarn dist && NODE_ENV=dev LOG_LEVEL=trace yarn micro-dev -p 8080 dist/index.js\"",
    "dist": "tsc && tsc-alias",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "lint:eslint": "eslint \"src/**\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "axios": "0.21.1",
    "lodash": "4.17.21",
    "micro": "9.3.4"
  },
  "devDependencies": {
    "@types/lodash": "4.14.171",
    "@types/micro": "7.3.6",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "eslint": "7.31.0",
    "micro-dev": "3.0.0",
    "nodemon": "2.0.12",
    "prettier": "2.4.1",
    "tsc-alias": "1.4.1",
    "typescript": "4.3.5"
  }
}

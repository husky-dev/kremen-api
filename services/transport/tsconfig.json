{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017"],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "config": ["config"],
      "config/*": ["config/*"],
      "core": ["core"],
      "core/*": ["core/*"],
      "lib": ["lib"],
      "lib/*": ["lib/*"],
      "utils": ["utils"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "./node_modules/**/*"
  ]
}

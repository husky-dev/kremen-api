{
  "name": "kremen-watchman",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn start:prd",
    "start:prd": "node dist/index.js",
    "start:dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"yarn dist && node dist/index.js\"",
    "dist": "tsc && tsc-alias",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:eslint": "eslint \"src/**\"",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{*.ts}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/node": "6.16.0",
    "@sentry/tracing": "6.16.0",
    "axios": "0.24.0",
    "lodash": "4.17.21",
    "mongodb": "4.2.1",
    "redis": "4.0.0",
    "ws": "7.3.1"
  },
  "devDependencies": {
    "@types/lodash": "4.14.177",
    "@types/mongodb": "4.0.7",
    "@types/node": "14.11.8",
    "@types/ws": "7.2.7",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "eslint": "8.4.1",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "nodemon": "2.0.5",
    "prettier": "2.5.1",
    "tsc-alias": "1.4.2",
    "typescript": "4.5.2"
  }
}

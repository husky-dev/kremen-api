{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "lib": ["./lib"],
      "lib/*": ["./lib/*"],
      "utils": ["./utils"],
      "utils/*": ["./utils/*"],
      "core": ["./core"],
      "core/*": ["./core/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
